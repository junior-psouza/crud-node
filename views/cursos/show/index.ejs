            </li>
            
      </div>
    </nav>
</head>
<body>
    <h2>Listagem</h2>
    <table border="1">
        <thead>
            <tr>
                <td>
                    Nome do Curso
                </td>
                <td>
                    Modalidade
                </td>
                <td>
                    Turno
                </td>
                <td>
                    Valor
                </td>
                <td>
                    Área
                </td>
                <td>
                    Especialização
                </td>
                <td>
                    Duração
                </td>
                <td>
                    Coordenador
                </td>
            </tr>
        </thead>
        <tbody>
            <% data.forEach(function(details) { %>
                <tr>
                    <td><%= details.nome%></td>
                    <td><%= details.modalidade%></td>
                    <td><%= details.turno%></td>
                    <td><%= details.valor%></td>
                    <td><%= details.area%></td>
                    <td><%= details.especializacao%></td>
                    <td><%= details.duracao%></td>
                    <td><%= details.coordenador%></td>
                    <td><a href="/cursos/edit/<%= details._id %>">Editar</a></td>
                    <td><a href="/cursos/delete/<%= details._id %>">Excluir</a></td>
                </tr>
            <% }) %>
        </tbody>
        <button><a href="/cursos/">Voltar</a></button>
    </table>
    
</body>
</html>